#!/usr/bin/env ruby

require 'rubygems'
require 'bundler/setup'
require 'thor'

$: << File.expand_path('../../lib', __FILE__)
require_relative '../lib/downloader'


class Download < Thor

  desc 'itpub [URL]', 'download it books from itpub.net'
  long_desc <<-LONGDESC
    > $ ./downloader
  LONGDESC


  def itpub(url)
    itpub_downloader = Downloader::ITPub.new 
    itpub_downloader.execute(url)
  end

end

Download.start
